generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  age          Int
  email        String @unique
  writtenPosts Post[]
}

model Post {
  id            String   @id @default(uuid())
  title         String
  averageReting Float
  createdAt     DateTime @default(now())
  author        User     @relation(fields: [authorId], references: [id])
  authorId      String
}
